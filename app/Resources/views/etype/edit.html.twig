{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
    <div class="row">
        <div class="col-sm-10">
            <h1>Program weryfikacji wyposażenia pomiarowego</h1>
        </div>
    </div>
</div>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}


<div class="row">
 <div class="container-fluid col-sm-8">
    <div class="row">
        <div class="col-sm-4">
            {{ form_label(edit_form.emodel, 'Nazwa przyrządu') }}
        </div>
         <div class="col-sm-8">
            {{ form_errors(edit_form.emodel) }}
            {{ form_widget(edit_form.emodel) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_label(edit_form.producer, 'Producent przyrządu') }}
        </div>
         <div class="col-sm-8">
            {{ form_errors(edit_form.producer) }}
            {{ form_widget(edit_form.producer) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_label(edit_form.eType, 'Typ') }}
        </div>
         <div class="col-sm-8">
            {{ form_errors(edit_form.eType) }}
            {{ form_widget(edit_form.eType) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_label(edit_form.ePrice, 'Cena') }}
        </div>
         <div class="col-sm-8">
            {{ form_errors(edit_form.ePrice) }}
            {{ form_widget(edit_form.ePrice) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_label(edit_form.verification, 'Rodzaj weryfikacji') }}
        </div>
         <div class="col-sm-8">
            {{ form_errors(edit_form.verification) }}
            {{ form_widget(edit_form.verification) }}

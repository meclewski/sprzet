         <div class="col-sm-8">
            {{ form_errors(edit_form.laboratory) }}
            {{ form_widget(edit_form.laboratory) }}
        </div>
    </div>
</div> 

 <div class="container col-sm-4 hidden-xs">
 
 <div class="row">
        
         <div class="col-sm-12">
            <img class="img-responsive" src="{{ vich_uploader_asset(etype, 'imageFile') }}" alt="{{ etype.imageName }}" />
         </div>
 </div> 
 <div class="row">
        
         <div class="col-sm-12">
            {{ form_errors(edit_form.imageFile) }}
            {{ form_widget(edit_form.imageFile) }}
        </div>
 </div>
   


</div> 

</div> <!-- "big" row-->

<hr class="featurette-divider">

<div class="btn-group">  
  <ul class="list-inline">
        <li>
            <input  class="btn btn-primary" type="submit" value="Edytuj"> {{ form_end(edit_form) }}
        </li>
        <li>
            <a href="{{ path('etype_index') }} " class="btn btn-success " type="button" >Powrót do listy</a>
        </li>     
        <li>    
            {{ form_start(delete_form, {'attr': {'onclick': 'return confirm("Na pewno chcesz usunąć wpis?")'}}) }}
            <input  class="btn btn-danger" type="submit" value="Kasuj">    
            {{ form_end(delete_form) }}
        </li>
        
    </ul>            
        
   
</div>

  
{% endblock %}

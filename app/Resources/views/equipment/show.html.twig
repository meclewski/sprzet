{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Szczegóły</h1>
    </div>
    <table class="table table-hover table-bordered" id="table" width="100%" cellspacing="0">
        <tbody>
            <tr>
                <th>Nr kalibracji</th>
                <td>{{ equipment.id }}</td>
            </tr>
            <tr>
                <th>Nr inwentarzowy</th>
                <td>{{ equipment.inventoryNr }}</td>
            </tr>
            <tr>
                <th>Nr seryjny</th>
                <td>{{ equipment.serialNr }}</td>
            </tr>
            <tr>
                <th>Data weryfikacji</th>
                <td>{% if equipment.verificationDate %}{{ equipment.verificationDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Data kolejnej weryfikacji</th>
                <td>{% if equipment.timeToVerification %}{{ equipment.timeToVerification|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Wynik weryfikacji</th>
                <td>{{ equipment.verificationResult }}</td>
            </tr>
            <tr>
                <th>Data produkcji</th>
                <td>{% if equipment.productionDate %}{{ equipment.productionDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Osoba odpowiedzialna</th>
                <td>{{ equipment.userId }}</td>
            </tr>
            <tr>
                <th>Osoba wprowadzająca</th>
                <td>{{ equipment.engId }}</td>
            </tr>
            <tr>
                <th>Miejsce użytkowania</th>
                <td>{{ equipment.place }}</td>
            </tr>
            <tr>
                <th>Czy sprzęt używany</th>
                <td>{% if equipment.ifUsed %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <hr class="featurette-divider">
    

    <div class="container">     
    <div class="row">
        <div class="col-xs-4 text-left">
            <a href="{{ path('equipment_edit', { 'id': equipment.id }) }} " class="btn btn-primary">Edytuj</a>
            
        </div>

        <div class="col-xs-4">
        
         
        </div>

        <div class="col-xs-4">
                <a href="{{ path('equipment_index') }} " class="btn btn-success">Powrót do listy</a>
        </div>
    </div>

</div>  
{% endblock %}

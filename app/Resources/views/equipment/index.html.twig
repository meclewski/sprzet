{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
    <h1>Lista sprzętu</h1>
    </div>

    <table class="table table-striped table-bordered" id="table" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nr inwent.</th>
                <th>Nr seryjny</th>
                <th>Data weryfikacji</th>
                <th>Następna weryfikacja</th>
                <th>Wynik weryfikacji</th>
                <th>Data produkcju</th>
                <th>Użytkownik</th>
                <th>Wprowadzający</th>
                <th>Miejsce użytk.</th>
                <th>Czy używany</th>
                <th class="hidden-xs">___Akcje___</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipment %}
            <tr>
                <td><a href="{{ path('equipment_show', { 'id': equipment.id }) }}">{{ equipment.id }}</a></td>
                <td>{{ equipment.inventoryNr }}</td>
                <td>{{ equipment.serialNr }}</td>
                <td>{% if equipment.verificationDate %}{{ equipment.verificationDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if equipment.timeToVerification %}{{ equipment.timeToVerification|date('Y-m-d') }}{% endif %}</td></td>
                <td>{% if equipment.verificationResult %}{{equipment.verificationResult|date('Y-m-d') }}{% endif %}</td>
                <td>{% if equipment.productionDate %}{{ equipment.productionDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ equipment.userId }}</td>
                <td>{{ equipment.engId }}</td>
                <td>{{ equipment.place }}</td>
                <td>{% if equipment.ifUsed %}Yes{% else %}No{% endif %}</td>
                <td class="hidden-xs ">
                    <div class="btn-group">
                            <a href="{{ path('equipment_show', { 'id': equipment.id }) }}" class="btn btn-sm btn-primary" role="button">show</a>
                        
                            <a href="{{ path('equipment_edit', { 'id': equipment.id }) }}" class="btn btn-sm btn-primary" role="button">edit</a>
                     </div> 
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipment_new') }}">Create a new equipment</a>
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Verifications list</h1>

    <table class="table table-striped table-bordered" id="table" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vkind</th>
                <th>Vdesc</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for verification in verifications %}
            <tr>
                <td><a href="{{ path('verification_show', { 'id': verification.id }) }}">{{ verification.id }}</a></td>
                <td>{{ verification.vKind }}</td>
                <td>{{ verification.vDesc }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('verification_show', { 'id': verification.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('verification_edit', { 'id': verification.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('verification_new') }}">Create a new verification</a>
        </li>
    </ul>
{% endblock %}

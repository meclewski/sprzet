{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rodzaj urządzenia</h1>

    <table class="table table-striped table-bordered" id="table" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Funktion</th>
                <th>Fdesc</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for efunction in efunctions %}
            <tr>
                <td><a href="{{ path('efunction_show', { 'id': efunction.id }) }}">{{ efunction.id }}</a></td>
                <td>{{ efunction.funktion }}</td>
                <td>{{ efunction.fDesc }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('efunction_show', { 'id': efunction.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('efunction_edit', { 'id': efunction.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('efunction_new') }}">Twórz nowy</a>
        </li>
    </ul>
{% endblock %}
